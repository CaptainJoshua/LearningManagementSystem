    <body id="user_profile">
        <div class="container py-5">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col col-lg-6 mb-4 mb-lg-0">
                    <div class="card mb-3" style="border-radius: 0.5rem">
                        <div class="row g-0">
                            <div class="col-md-4 gradient-custom text-center text-white bg-info bg-gradient">
                                <!-- The image below is sample only, we will get the save image from database to display on this -->
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp" alt="Avatar" class="img-fluid my-5" style="width: 80px" />
