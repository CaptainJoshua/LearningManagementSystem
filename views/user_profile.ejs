                                <!-- The value of role will come from database -->
                                <p>Student</p>
                                <!-- The value of student No. will come from database -->
                                <p>Student No. 123456</p>

                                <!-- Button to trigger modal -->
                                <a href=""><i class="far fa-edit mb-5 text-success fa-2x" data-mdb-toggle="modal" data-mdb-target="#staticBackdrop"></i></a>

